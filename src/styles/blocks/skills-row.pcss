.skills-row {
  @include tablets {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
}

.skills-row__title {
  margin-bottom: 26px;
  font-size: 24px;
  font-weight: 700;
}

.skills-row__list {
  display: flex;
  flex-wrap: wrap;
  margin-left: -4%;

  @include tablets {
    margin-left: 0;
  }

  @include phones {
    justify-content: center;
  }
}

.skills-row__item {
  margin-left: 4%;

  @include tablets {
    margin-left: 0;
  }
}